---
import { LargeEmail } from "./large-email.tsx";

import { Image } from 'astro:assets';
import simProfileImage from '../assets/images/sim_profile_square.png';
import figmaIcon from '../assets/icons/figma_icon.svg';
import astroIcon from '../assets/icons/astro_icon.svg';
import heartIcon from '../assets/icons/heart_icon.svg';

const currentYear = new Date().getFullYear();
---

<footer class="main-footer u-pad-be-l">
  <div class="footer-background"></div>
  <div class="u-container main-footer--inner">
    <div class="footer-contact u-flex u-mrg-be-xl">
      <div class="footer-contact--blurb">
        <p class="u-subtitle u-mrg-be-l">I love a chat</p>
        <p class="u-fontsize-1 u-font-display u-mrg-be-2xl">Welcome to the footer where my contact details are, as you'd expect.</p>
        <div class="footer-profile">
          <Image src={simProfileImage} alt="Graphic illustration of Sim smiling in a red shirt on a purple background" />
          <h3 class="u-fontsize-1 u-font-display">It's me, Sim</h3>
        </div>
      </div>
      <div class="footer-contact--details">
        <LargeEmail client:load />
        <nav class="footer-links u-mrg-bs-l" role="menu">
          <ul>
            <li role="none">
              <a href="/blog" role="menuitem" class="u-subtitle light">
                <span>linkedin</span>
              </a>
            </li>
            <li role="none">
              <a href="/blog" role="menuitem" class="u-subtitle light">
                <span>Instagram</span>
              </a>
            </li>
            <li role="none">
              <a href="/blog" role="menuitem" class="u-subtitle light">
                <span>read.cv</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <nav class="footer-nav u-mrg-be-m" role="menu">
      <p class="u-subtitle u-mrg-be-s">More things</p>
      <ul class="u-flex">
        <li role="none">
          <a href="/about" role="menuitem" class="u-font-body u-fontsize-1 light">
            <span>/about</span>
          </a>
        </li>
        <li role="none">
          <a href="/now" role="menuitem" class="u-font-body u-fontsize-1 light">
            <span>/now</span>
          </a>
        </li>
        <li role="none">
          <a href="/rss" role="menuitem" class="u-font-body u-fontsize-1 light">
            <span>/rss</span>
          </a>
        </li>
      </ul>
    </nav>
    <hr class="u-mrg-be-m" />
    <div class="footer-signoff u-flex">
        <div class="footer-signoff__love u-flex">
          <p class="u-subtitle">Made with</p>
          <Image src={figmaIcon} alt="Figma icon" />
          <Image src={astroIcon} alt="Astro icon" />
          <p class="u-subtitle">and</p>
          <Image src={heartIcon} alt="Heart icon" />
        </div>
        <div class="footer-signoff__bits">
          <p class="u-subtitle">Â© {currentYear}, Simeon Seneca</p>
          <a href="/changelog" class="u-subtitle">Changelog</a>
        </div>
    </div>
  </div>
</footer>

<style>
  .main-footer {    
    position: relative;

    .footer-background {
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 0;
      height: calc(100% - var(--space-3xl));
      background-color: var(--navy);
    }

    .main-footer--inner {
      position: relative;
      z-index: 10;
    }
  }

  .footer-contact {
    background-color: var(--purple);
    color: var(--beige);
    border-radius: 10px;
    border: 2px solid var(--border-primary);
    gap: var(--space-2xl);
    justify-content: space-between;
    align-items: end;
    padding: var(--space-2xl);

    .footer-contact--blurb {
      flex-basis: 40%;

      .footer-profile {
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: var(--space-s);

        img {
          width: 80px;
          border-radius: 50%;
          height: auto;
          border: 1px solid var(--navy);
        }
      }            
    }

    .footer-contact--details {
      
      ul {
        list-style: none;
        display: flex;
        gap: var(--space-s);
        justify-content: end;

        li a {
          --inline-padding: var(--space-2xs);
        }
      }
    }
  }

  .footer-nav {
    color: var(--beige-dark);
    
    p {
      color: var(--navy-lighter);
    }
    
    ul {
      list-style: none;

      li:first-of-type a {
        padding-left: 0;

        &::after {
          left: 0;
        }

        &:hover::after {
          width: calc(100% - var(--space-xs));
        }
      }
    }
  }

  hr {
    border-top: solid 2px var(--navy-lighter);
  }

  .footer-signoff {
    color: var(--beige);
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;

    .footer-signoff__love {
      align-items: center;
      gap: var(--space-xs);

      img {
        height: 22px;
        width: auto;
      }
    }

    .footer-signoff__bits {
      display: flex;
      gap: var(--space-s);
      align-items: center;
      
      p {
        color: var(--navy-lighter);
      }

      a {
        color: var(--navy-lightest);
        transition: all 0.1s ease;

        &:hover {
          color: var(--beige-light);
        }
      }
    }
  }
</style>