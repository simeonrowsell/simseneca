---
import SimpleIcon from './simple-icon.astro';

interface Props {
  type?: string | undefined;
	icon: { title: string; path: string, hex?: string };
  title?: string | undefined;
  url?: string | undefined;
}

const { type, icon, title, url } = Astro.props;
---

<li class="uses-item">
  <div class="uses-item__inner">
    <p class="uses-item__type u-subtitle">{type}</p>
    <p class="uses-item__item">
      {icon ? <SimpleIcon icon={icon} /> : ''}
      <a href={url}>{title}</a> : <slot />
    </p>
  </div>
</li>

<style>
  .uses-item {
    container: uses-item / inline-size;
    list-style: none;
  }

  .uses-item__inner {
    display: flex;
    align-items: flex-start;
    gap: var(--space-l);
    margin-block: var(--space-s);

    .uses-item__type {
      font-size: var(--fontsize--2);
      color: var(--text-secondary);
      transform: translateY(10px);
      flex-basis: 120px;
    }

    .uses-item__item {
      flex: 1;
      margin-block-end: 0;

      svg {
        transform: translateY(5px);
        margin-inline-end: var(--space-3xs);
      }
    }
  }

  @container uses-item (max-width: 600px) {
    
    .uses-item__inner {
      flex-direction: column;
      gap: var(--space-2xs);
      margin-block: var(--space-m);

      .uses-item__type {
        flex-basis: auto;
        transform: translateY(0);
        margin-block-end: 0;
      }
    }
  }
</style>